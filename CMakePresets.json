{
  "version": 6,
  "configurePresets": [
    {
      "name": "multi",
      "displayName": "Multi-Config",
      "generator": "Ninja Multi-Config",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "tools/cmake/conan_provider.cmake",
        "CMAKE_COLOR_DIAGNOSTICS": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "generator": "Ninja",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "tools/cmake/conan_provider.cmake",
        "CMAKE_COLOR_DIAGNOSTICS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "generator": "Ninja",
      "binaryDir": "build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "tools/cmake/conan_provider.cmake",
        "CMAKE_COLOR_DIAGNOSTICS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "multi-release",
      "configurePreset": "multi",
      "configuration": "Release"
    },
    {
      "name": "multi-debug",
      "configurePreset": "multi",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug"
    }
  ]
}
