{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "generator": "Ninja Multi-Config",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": {
          "type": "STRING",
          "value": "Debug;Release"
        },
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": {
          "type": "STRING",
          "value": "tools/cmake/provider/Conan.cmake"
        },
        "CMAKE_COLOR_DIAGNOSTICS": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_VERIFY_INTERFACE_HEADER_SETS": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "clang",
      "displayName": "Clang",
      "inherits": "default",
      "toolchainFile": "tools/cmake/toolchains/clang-base.cmake"
    },
    {
      "name": "gcc",
      "displayName": "GCC",
      "inherits": "default",
      "toolchainFile": "tools/cmake/toolchains/gcc-base.cmake"
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "default",
      "configuration": "Release"
    },
    {
      "name": "debug",
      "configurePreset": "default",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "all",
      "displayName": "Unit tests",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "stopOnFailure": true
      }
    }
  ]
}
